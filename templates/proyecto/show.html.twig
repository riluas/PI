{% extends 'base.html.twig' %}

{% block title %}Proyecto
{% endblock %}

{% block body %}
	<h1 style="font-size: 2.5rem; text-align: center; margin-bottom: 5%; margin-top: 15px;">Proyecto</h1>
	<div class="table-responsive">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ proyecto.id }}</td>
				</tr>
				<tr>
					<th>Título</th>
					<td>{{ proyecto.titulo }}</td>
				</tr>
				<tr>
					<th>Curso Escolar</th>
					<td>{{ proyecto.cursoEscolar }}</td>
				</tr>
				<tr>
					<th>Descripción</th>
					<td>{{ proyecto.descripcion }}</td>
				</tr>
			</tbody>
		</table>

	</div>

	<div class="container-fluid">
		<div class="row ">
			<div class="col-md-4">
				<a href="{{ path('proyecto_index') }}" class="btn">Volver</a>
			</div>

			<div class="col-md-4 align-self-end">
				<a href="{{ path('proyecto_edit', {'id': proyecto.id}) }}" class="btn">Editar</a>
			</div>

			<div class="col-md-4 align-self-end ">
				{{ include('proyecto/_delete_form.html.twig') }}
			</div</div>

		</div>
	</div>


{% endblock %}