<form method="post" action="{{ path('documento_delete', {'id': documento.id}) }}" onsubmit="return confirm('Estas seguro que quieres eliminar este documento?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ documento.id) }}">
    <button class="btn">Borrar</button>
</form>
