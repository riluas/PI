{% extends 'base.html.twig' %}

{% block title %}Documento
{% endblock %}

{% block body %}
	<h1>Documento</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ documento.id }}</td>
			</tr>
			<tr>
				<th>Nombre</th>
				<td>{{ documento.nombre }}</td>
			</tr>
			<tr>
				<th>Formato</th>
				<td>{{ documento.formato }}</td>
			</tr>
		</tbody>
	</table>


	<div class="container-fluid">
		<div class="row ">
			<div class="col-md-4">
				<a href="{{ path('documento_index') }}" class="btn">Volver</a>
			</div>

			<div class="col-md-4 align-self-end">
				<a href="{{ path('documento_edit', {'id': documento.id}) }}" class="btn">Editar</a>
			</div>

			<div class="col-md-4 align-self-end ">
				{{ include('documento/_delete_form.html.twig') }}
			</div</div>

		</div>
	</div>
{% endblock %}
