{% extends 'admin/layout.html.twig' %}

{% block title %}Documentos{% endblock %}

{% block contenido %}
    <h1>Documentos </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Formato</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for documento in documentos %}
            <tr>
                <td>{{ documento.id }}</td>
                <td>{{ documento.nombre }}</td>
                <td>{{ documento.formato }}</td>
                <td>
                    <a href="{{ path('documento_show', {'id': documento.id}) }}" class="btn">Mostrar</a>
                    <a href="{{ path('documento_edit', {'id': documento.id}) }}" class="btn">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay resultados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('documento_new') }}" class="btn">AÃ±adir</a>
{% endblock %}