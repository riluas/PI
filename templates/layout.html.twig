{% extends "base.html.twig" %}

{% block body %}
<header>
			<nav class="navbar navbar-expand-lg navbar-dark nav-color">
				<a class="navbar-brand" href={{ path('index') }}><img src="images/logo.png" style="margin-left: 45px; margin-top: -6px; margin-bottom:-9px " width="200" alt=""></a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>


				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav ml-auto my-2 my-lg-0">
						<li class="nav-item"></li>
						{% if user == ""%}
							<li>
								<a href="" class="login w-100 font-weight-bold" data-toggle="modal" data-target="#modalLoginForm">Iniciar Sesión</a>
							</li>
						{% endif %}
						{% if user != "" %}

							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
									<h4 class="login w-100 font-weight-bold">Hola
										{{ app.session.get("nombre_usuario") }}</h4>
								</a>
								<div class="dropdown-menu" aria-labelledby="navbarDropdown">
									<a class="dropdown-item" href={{ path('logOut') }}>Cerrar Sesión</a>
								</div>
							</li>

						{% endif %}
					</ul>
				</div>
			</nav>

			<!-- IMAGEN PRINCIPAL -->
			<div class="pb-5 container-fluid" style="background-image: url(images/lel.jpg);background-position:center; background-size:cover ; background-repeat: no-repeat;">

				<div class="jumbotron-fluid text-white">

					<figure><img src="" alt=""></figure>

					<p class="lead">"El misterio de la vida no es un problema a resolver, sino una realidad a experimentar"</p>
					<p class="ml-5">Duna, Frank Herbert</p>


				</div>
			</div>
		</header>

        		<section>
			<div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header text-center">
							<h4 class="modal-title w-100 font-weight-bold">Iniciar Sesión</h4>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span class="close-popup" aria-hidden="true">&times;</span>
							</button>
						</div>
						<form class="form" action="{{ url("sendlogin") }}" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST">
							<div class="form-group">
								<label for="user">Usuario</label>
								<input type="text" class="form-control form-control-lg rounded-0" name="user" id="user" required="">
								<div class="invalid-feedback">Introduce el nombre de usuario</div>
							</div>
							<div class="form-group">
								<label>Contraseña</label>
								<input type="password" class="form-control form-control-lg rounded-0" name="password" id="password" required="" autocomplete="new-password">
								<div class="invalid-feedback">Introduce la contraseña</div>
							</div>

							<div class="modal-footer d-flex justify-content-center">
								<input type="reset" value="Reset" class="btn btn-lg float-left">
								<button type="submit" class="btn btn-lg float-right" id="btnLogin">Acceder</button>

							</div>
						</form>
					</div>
				</div>
			</div>
			<!--/container-->
		</section>

            {% block contenido %}{% endblock %}
		<footer class="mt-5 text-center">
			<hr>
			<address>
				Florida Universitaria Biblioteca<br>
				floridaUniversitariaBiblioteca@gmail.com
			</address>

			<ul class="row">
				<div class="col">
					<li style="list-style: none;">
						<a href="https://twitter.com/floridauni">
							<i><img class="fut" src="images/twitter.png" alt=""></i>
						</a>
					</li>
				</div>

				<div class="col">
					<li style="list-style: none;">
						<a href="https://www.facebook.com/floridauniversitaria">
							<i><img class="fut" src="images/logoBlancoFacebook.png" alt="" style=""/></i>
						</a>
					</li>
				</div>
			</ul>
		</footer>
{% endblock %}